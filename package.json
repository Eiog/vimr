{
  "name": "@vue-explorer/monorepo",
  "version": "0.0.1-beta.1",
  "private": true,
  "packageManager": "pnpm@7.28.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr volar:helper nr stub",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "stub": "pnpm -r --parallel --filter=./packages/* run dev",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/{preset,utils,components}\" build && nr volar:helper",
    "play": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "example": "npm -C example run dev",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper"
  },
  "dependencies": {
    "vue-explorer": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@antfu/ni": "^0.20.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.0",
    "@unocss/reset": "^0.50.4",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/ui": "^0.29.2",
    "@vue/test-utils": "^2.3.1",
    "@vueuse/core": "^9.13.0",
    "eslint": "^8.35.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.0",
    "jsdom": "^21.1.0",
    "less": "^4.1.3",
    "lint-staged": "^13.1.2",
    "rimraf": "^4.4.0",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.9.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "unocss": "^0.50.4",
    "unplugin-auto-import": "^0.15.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^2.1.0",
    "vitepress": "1.0.0-alpha.51",
    "vitest": "^0.29.2",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
